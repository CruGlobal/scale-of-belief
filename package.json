{
  "name": "scale-of-belief-lambda",
  "version": "1.0.0",
  "description": "Scale of Belief - AWS Lambda functions",
  "main": "handlers/placement.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/CruGlobal/scale-of-belief-lambda.git"
  },
  "scripts": {
    "lint": "standard || exit 0",
    "lint:fix": "standard --fix || exit 0",
    "test": "jest --forceExit --coverage",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:test": "sequelize --env test db:migrate",
    "db:create": "sequelize db:create",
    "db:create:test": "sequelize --env test db:migrate"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@cruglobal/serverless-merge-config": "^1.0.1",
    "chance": "^1.0.13",
    "coveralls": "^3.0.0",
    "factory-girl": "^5.0.2",
    "jest": "^22.3.0",
    "lodash": "^4.17.5",
    "sequelize-cli": "^3.2.0",
    "serverless": "^1.26.0",
    "serverless-offline": "^3.18.0",
    "serverless-plugin-bind-deployment-id": "^1.0.1",
    "serverless-plugin-scripts": "^1.0.2",
    "standard": "^10.0.3"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "dotenv": "^5.0.0",
    "express": "^4.16.2",
    "glob": "^7.1.2",
    "pg": "^7.4.1",
    "pg-hstore": "^2.3.2",
    "rollbar": "^2.3.9",
    "sequelize": "^4.33.0",
    "serverless-http": "^1.5.3",
    "swaggerize-express": "^4.0.5",
    "umzug": "^2.1.0"
  },
  "standard": {
    "globals": [
      "__fixturesDir"
    ],
    "env": {
      "node": true,
      "jest": true
    }
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "globalSetup": "./test/global-setup.js",
    "globalTeardown": "./test/global-teardown.js",
    "setupTestFrameworkScriptFile": "./test/test-setup.js",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
